<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#ffffff" >

      <!-- Header Starts -->
      <!-- Header Ends -->


      <!-- Footer Start -->
      <!-- Footer Ends -->


      <!-- Login Form -->
      <!-- Login Form Ends -->

      <LinearLayout
          android:id="@+id/header"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:background="#ffffff"
          android:orientation="vertical"
          android:paddingBottom="5dip"
          android:paddingTop="5dip" >
      </LinearLayout>

      <Button
          android:id="@+id/submit_emergency_contact"
          android:layout_width="200dp"
          android:layout_height="35dp"
          android:layout_above="@+id/cancel_emergency_contact"
          android:layout_centerHorizontal="true"
          android:text="Add Emergency Contact"
          android:textSize="15dp" />

      <Button
          android:id="@+id/cancel_emergency_contact"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/submit_emergency_contact"
          android:layout_alignParentBottom="true"
          android:layout_alignRight="@+id/submit_emergency_contact"
          android:text="Cancel"
          android:textSize="15dp" />

      <EditText
          android:id="@+id/emergency_contact_name"
          android:layout_width="175dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/header"
          android:layout_marginRight="20dp"
          android:layout_marginTop="40dp"
          android:ems="10"
          android:hint="Enter Name"
          android:singleLine="true" />

      <requestFocus
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <EditText
          android:id="@+id/emergency_contact_number1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/emergency_contact_name"
          android:layout_alignRight="@+id/emergency_contact_name"
          android:layout_below="@+id/emergency_contact_name"
          android:ems="10"
          android:hint="Enter Number 1"
          android:singleLine="true" 
          android:inputType="phone"/>

      <EditText
          android:id="@+id/emergency_contact_number2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/emergency_contact_number1"
          android:layout_alignRight="@+id/emergency_contact_number1"
          android:layout_below="@+id/emergency_contact_number1"
          android:ems="10"
          android:hint="Enter Number 2"
          android:singleLine="true" 
          android:inputType="phone"/>

      <EditText
          android:id="@+id/emergency_contact_relationship"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/emergency_contact_email"
          android:layout_alignRight="@+id/emergency_contact_email"
          android:layout_below="@+id/emergency_contact_email"
          android:ems="10"
          android:hint="Enter Relationship"
          android:singleLine="true" />

      <EditText
          android:id="@+id/emergency_contact_email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/emergency_contact_number2"
          android:layout_alignRight="@+id/emergency_contact_number2"
          android:layout_below="@+id/emergency_contact_number2"
          android:ems="10"
          android:hint="Enter Email"
          android:singleLine="true" />

      <TextView
          android:id="@+id/TextView01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/emergency_contact_number1"
          android:layout_alignBottom="@+id/emergency_contact_number1"
          android:layout_alignLeft="@+id/textView1"
          android:text="Number 1:"
          android:textColor="#000"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/TextView02"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/emergency_contact_number2"
          android:layout_alignBottom="@+id/emergency_contact_number2"
          android:layout_alignLeft="@+id/TextView01"
          android:text="Number 2:"
          android:textColor="#000"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/TextView03"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/emergency_contact_email"
          android:layout_alignBottom="@+id/emergency_contact_email"
          android:layout_alignLeft="@+id/TextView02"
          android:text="Email:"
          android:textColor="#000"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/emergency_contact_name"
          android:layout_alignBottom="@+id/emergency_contact_name"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="14dp"
          android:text="Contact Name:"
          android:textColor="#000"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/TextView04"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/emergency_contact_relationship"
          android:layout_alignBottom="@+id/emergency_contact_relationship"
          android:layout_alignLeft="@+id/TextView03"
          android:text="Relationship:"
          android:textColor="#000"
          android:textSize="14sp" />

      <EditText
          android:id="@+id/emergency_contact_response"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/TextView04"
          android:layout_alignRight="@+id/emergency_contact_relationship"
          android:layout_below="@+id/emergency_contact_relationship"
          android:background="#ffffff"
          android:ems="10"
          android:textColor="#000" />

  </RelativeLayout>

</ScrollView>